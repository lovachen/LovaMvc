@model List<BucketMapping>
@{
    ViewData["Title"] = "图片库";
}
    <div class="page-content">
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="form-inline" onsubmit="return false" id="formSearch">
                    <div class="form-group">
                        <label for="q">Bucket</label>
                        <select id="level" class="form-control" name="bucketid">
                            <option value="">不限</option>
                            @foreach (var item in Model)
                            {
                                <option value="@item.id">@item.name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-purple btn-sm"><i class="fa fa-search"></i> 查询</button>
                </form>
            </div>
        </div>
        <div class="row"> 
            <div class="col-sm-12">
                <table id="table_data" class="table table-striped table-bordered table-hover dataTable no-footer">
                    <thead>
                        <tr>
                            <th width="20%">图片</th> 
                            <th width="10%">扩展名</th> 
                            <th width="20%">创建时间</th>
                            @*<th>操作</th>*@
                        </tr>
                    </thead>
                </table>
            </div> 
        </div>

    </div>

    <script>


    $(function () {
        // "orderable": false
        var table = $('#table_data').DataTable({
            language: { url: '/dataTables/chinese.json' },
            bAutoWidth: false,
            serverSide: true,
            processing: true,
            searching: false,
            scrollX: false,
            ajax: {
                url: '@Url.RouteUrl("imageData")',
                data: function (d) {
                    d.q = $('#bucketid').val();
                }
            },
            order:[2,'desc'],
            columns: [
                {
                    "width": '20%', data: null, "orderable": false,
                    render: function (data, type, row) {
                        var html = '<a href="../assets/images/gallery/image-3.jpg" data-rel="colorbox" class="cboxElement">'
												+'<img width="150" height="150" alt="150x150" src="../assets/images/gallery/thumb-3.jpg">'
												+'<div class="text"><div class="inner">Sample Caption on Hover</div></div></a>';
                        return html;
                    }
                },
                { "width": '10%', data: "ext_name", "orderable": false },
                { "width": '20%', data: "creation_time_format", "orderable": false },
                //{ "width": '20%', data: null, "orderable": false,
                //    render: function (data, type, row) {

                //    }
                //}
            ],

            rowCallback: function (row, data) {
                $(row).find('.btnDetails').click(function (e) {
                    var _url = $(this).data('url');
                    var load = layer.load(2);
                    $.get(_url, function (html) {
                        layer.close(load);
                        layer.open({
                            type: 1,
                            maxmin: true,
                            area: ['80%', '80%'],
                            title: "预览日志详情",
                            content: html
                        });
                    });
                });
            }
        });
        $('#formSearch').submit(function (e) {
            e.preventDefault();
            table.draw();;
        });



    })
    </script>